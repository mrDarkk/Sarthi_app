<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/colorRow"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/row_height">

    <TextView
        android:layout_width="140dp"
        android:id="@+id/txtex_name"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/colorPrimaryText"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin" />

    <ImageView
        android:layout_width="@dimen/cell_width"
        android:layout_margin="@dimen/margin"
        android:contentDescription="@string/logo"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/imgLogo"/>

    <TextView
        android:layout_width="@dimen/email_cell"
        android:id="@+id/txtex_email"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin" />

    <TextView
        android:layout_width="150dp"
        android:id="@+id/txtex_phone"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin" />

    <TextView
        android:layout_width="@dimen/cell_width"
        android:id="@+id/txtex_address"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin" />

    <TextView
        android:layout_width="@dimen/email_cell"
        android:id="@+id/txtex_allocated_area"
        android:layout_marginStart="@dimen/margin"
        android:gravity="center|start"
        android:textColor="@color/colorSecondaryText"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:textColor="#ffff"
        android:text="Edit"/>


</LinearLayout>