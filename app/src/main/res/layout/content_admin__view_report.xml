<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Admin_View_reportActivity"
    tools:showIn="@layout/app_bar_admin__view_report">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="date"
            android:hint="Start date"
            android:layout_weight="1.5"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:inputType="date"
            android:hint="End date"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Go"
            android:background="@drawable/button_bg"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/headerScroll"
        android:layout_height="@dimen/header_height"
        tools:ignore="MissingConstraints">

        <LinearLayout android:orientation="horizontal"
            android:background="@drawable/bg_bg_backgroud"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/email_cell"
                android:id="@+id/txtex_name"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Executive Email"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtimg"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Image"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtfarmer_name"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="Farmer Name"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="150dp"
                android:id="@+id/txtfarmer_phone"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/margin"
                android:textStyle="bold"
                android:text="farmer phone no"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtfarmer_type"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="farmer type"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtTopic"
                android:gravity="center|start"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Topic"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtissue"
                android:gravity="center|start"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Issue"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtnoof_member"
                android:gravity="center|start"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="No Of member"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/txtactivity"
                android:gravity="center|start"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="Activity"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

            <TextView
                android:layout_width="@dimen/email_cell"
                android:id="@+id/txtaddress"
                android:gravity="center|start"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin"
                android:text="address"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin" />

        </LinearLayout>

    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvClub"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>